<fieldset>
	<legend>Alphabetische Sortierung</legend>
	<% @letters.each do |letter| %>
		<% letter_class = (letter == @initial) ? "letter_current" : "letter" %>
		<%= link_to letter, { :action => "index", :id => letter },
													:class => letter_class %>
	<% end %>
	<br clear="all" />
</fieldset>
<br>
	<%= render :partial => "user_table" %>
	<% if @initial.nil? %>
		<%= render :partial => "search_form" %>
	<% end %>