<%= form_for :user do |form| %>
	<fieldset>
		<legend><%= @title %></legend>
		<%= error_messages_for "user" %>
		<%= render :partial => "screen_name_field_row",
							 :locals => { :form => form,} %>	
		<%= render :partial => "email_field_row",
							 :locals => { :form => form } %>
		<%= render :partial => "password_field_row",
							 :locals => { :form => form, 
							 :field => "password",
							 :field_title => "Passwort" } %>
		<%= render :partial => "password_field_row",
							 :locals => { :form => form,
							 :field => "password_confirmation",
							 :field_title => "Passwort bestÃ¤tigen" } %>
		<div class="form_row">
			<%= submit_tag "Senden", :class => "submit" %>
		</div>
	</fieldset>
<% end %>