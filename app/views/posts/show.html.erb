<h2><%= link_to 'Zurück zur Nachrichtenübersicht', blog_posts_path %></h2>
<div class="post">
	<b>Titel:</b> <%= @post.title.force_encoding("UTF-8") %>
  <div class="post_body">
		<%= @post.body.force_encoding("UTF-8") %>
	</div>
	<span style="float:right">
	  <div class="post_title">
			<%= link_to_unless_current 'Anzeigen', blog_post_path(@post.blog, @post) %> |
			<%= link_to_unless_current 'Ändern', edit_blog_post_path(@post.blog, @post) %> |
			<%= link_to 'Löschen', blog_post_path(@post.blog, @post),
				:confirm => 'Bist du sicher?', :method => :delete %>
		</div>
	</span>
</div>